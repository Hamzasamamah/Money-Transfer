@model IEnumerable<Bank>
@{
     Layout = "~/views/shared/_UserLayout.cshtml";
}



<section class="hero-wrap hero-wrap-2" style="background-image: url(/HomeAssets/images/bg_2.jpg);" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text align-items-end">
          <div class="col-md-9 ftco-animate pb-5">
              <p class="breadcrumbs mb-2"><span class="mr-2"><a href="User">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Banks <i class="ion-ios-arrow-forward"></i></span></p>
            <h1 class="mb-0 bread">Banks</h1>
          </div>
        </div>
      </div>
    </section>







<section class="exclusive_item_part blog_item_section">
    <form class="d-flex ml-3 mr-3 mt-3" asp-controller="Search" asp-action="Search">
        <input class="form-control me-sm-2" name="searchTerm" type="search" placeholder="Search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
    <h1 style=" margin-left:100px;margin-top:50px " >Banks</h1>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    <div class="container">
        <div class="row">

           @{
               var counter = 0;
                var images = new[] { "arab.png", "aletihad.png", "capital.png", "jordan.png", "safwa.png", "ahli.png" };
            }

            @foreach (var item in Model)
            {
                
                <div class="card mr-5 mb-4" style="width: 20rem;">
                    <img src="/images/@images[counter]" class="card-img-top"  alt="Random Image">
                @{
                    counter = ++counter % images.Count();
                }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Jordan Arab Bank stands as a leading financial institution in Jordan,
                            known for its extensive banking services and contributions to the country's economic growth.</p>
                        <a asp-controller="Wallets" asp-action="Create" asp-route-Id="@item.Id" class="btn btn-primary">
                            Create a wallet </a>
                    </div>
                </div>
            }



        </div>
    </div>
</section>